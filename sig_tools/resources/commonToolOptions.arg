# Commonly used options for tools

-
  name: [-o, --out]
  default: ''
  help: Output path

-
  name: --rpt
  default: ''
  help: Report folder prefix

-
  name: --create_subdir
  default: true
  help: Create subfolder within out for saving results

-
  name: --verbose
  default: true
  help: Print debugging messages

-
  name: --encode_url
  default: false
  help: Encode URLs if true 

-
  name: --config
  default: ''
  action: read_args
  help: Argument configuration file